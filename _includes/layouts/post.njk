---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }} <small><time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time></small></h1>

  <h3>Class Agenda</h3>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/' | url }}">← Agenda index</a>
</nav>
